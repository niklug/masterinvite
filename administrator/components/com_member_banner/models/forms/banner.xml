<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_MEMBER_BANNER_FORM_LBL_BANNER_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="name" type="text"
                
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_NAME"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_NAME" 
                
                
                 required="true" 
            filter="raw" /> 

       <field name="language" type="list"
                
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_LANGUAGE"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_LANGUAGE" 
                
                
                 required="true" 
            filter="raw">
                <option value="dutch">COM_MEMBER_BANNER_BANNERS_DUTCH</option>
                <option value="english">COM_MEMBER_BANNER_BANNERS_ENGLISH</option>
                <option value="spanish">COM_MEMBER_BANNER_BANNERS_SPANISH</option>
        </field> 

 
		<field name="filter_language" type="list" onchange="this.form.submit();">
			<option value="">COM_MEMBER_BANNER_BANNERS_LANGUAGE_FILTER</option>
			<option value="dutch">COM_MEMBER_BANNER_BANNERS_DUTCH</option>
			<option value="english">COM_MEMBER_BANNER_BANNERS_ENGLISH</option>
			<option value="spanish">COM_MEMBER_BANNER_BANNERS_SPANISH</option>
		</field> 

       <field name="width" type="text" size="40" class="inputbox"
        
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_WIDTH"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_WIDTH" 
        
        
        
        filter="safehtml" /> 

       <field name="height" type="text" size="40" class="inputbox"
        
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_HEIGHT"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_HEIGHT" 
        
        
        
        filter="safehtml" /> 

       <field name="filename" type="file"
                
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_FILENAME"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_FILENAME" 
                
                
                /> 

       <field name="hints" type="text" size="40" class="inputbox"
        
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_HINTS"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_HINTS" 
        
        
        
        filter="safehtml" /> 

       <field name="preview" type="text" size="40" class="inputbox"
        
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_PREVIEW"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_PREVIEW" 
        
        
        
        filter="safehtml" /> 

       <field name="code" type="editor"
                
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_CODE"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_CODE" 
                
                
                
            width="700"
            height="300"
            cols="500"
            rows="100"
            filter="raw" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_CREATED_BY"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_CREATED_BY"  /> 

       <field name="created" type="timeupdated" default="" 
            label="COM_MEMBER_BANNER_FORM_LBL_BANNER_CREATED"
            description="COM_MEMBER_BANNER_FORM_DESC_BANNER_CREATED"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field>

	</fieldset>

</form>
